<script>
gsap.registerPlugin(ScrollTrigger, TextPlugin);

/* CURSOR */
const cursor = document.getElementById('cursor');
const follower = document.getElementById('cursorFollower');
let mx=0,my=0,fx=0,fy=0;
document.addEventListener('mousemove',e=>{mx=e.clientX;my=e.clientY},{passive:true});
(function tick(){
  cursor.style.transform=`translate3d(${mx-5}px,${my-5}px,0)`;
  fx+=(mx-fx)*.12; fy+=(my-fy)*.12;
  follower.style.transform=`translate3d(${fx-18}px,${fy-18}px,0)`;
  requestAnimationFrame(tick);
})();
document.querySelectorAll('a,button,.service-card,.project-item,.hero-role,.social-icon-btn,.skill-item').forEach(el=>{
  el.addEventListener('mouseenter',()=>{cursor.classList.add('expand');follower.classList.add('expand')});
  el.addEventListener('mouseleave',()=>{cursor.classList.remove('expand');follower.classList.remove('expand')});
});

/* NAV */
const nav = document.getElementById('mainNav');
window.addEventListener('scroll',()=>{
  if(window.scrollY > window.innerHeight * .85){
    nav.classList.remove('hero-zone');
    nav.classList.add('scrolled');
  } else {
    nav.classList.add('hero-zone');
    nav.classList.remove('scrolled');
  }
},{passive:true});

/* LOADER + HERO ENTRANCE */
gsap.timeline({onComplete:()=>{
  document.getElementById('loader').style.display='none';
  gsap.timeline()
    .to('.hero-tag',{opacity:1,duration:.5,ease:'power2.out'})
    .to('.hero-name .line',{y:0,opacity:1,duration:.7,stagger:.12,ease:'power3.out'},'-=.2')
    .to('.hero-bottom',{opacity:1,duration:.5,ease:'power2.out'},'-=.2')
    .to('#heroIllustration',{opacity:1,duration:.9,ease:'power2.out'},'-=.4');
}})
.to('#loaderText',{text:{value:'SHARMA'},duration:.45,delay:.2,ease:'none'})
.to('#loaderText',{opacity:0,duration:.3,delay:.12})
.to('#loader',{yPercent:-100,duration:.65,ease:'power4.inOut'});

/* SCROLL ANIMATIONS */
gsap.from('.about-heading',{opacity:0,y:44,duration:.7,ease:'power2.out',scrollTrigger:{trigger:'#about',start:'top 76%',once:true}});
gsap.from('.about-text',{opacity:0,y:24,duration:.6,delay:.1,ease:'power2.out',scrollTrigger:{trigger:'#about',start:'top 76%',once:true}});
gsap.from('.about-stats',{opacity:0,y:24,duration:.6,delay:.2,ease:'power2.out',scrollTrigger:{trigger:'#about',start:'top 76%',once:true}});
