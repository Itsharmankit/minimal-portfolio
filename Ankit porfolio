ScrollTrigger.batch('.project-item',{start:'top 92%',once:true,onEnter:els=>gsap.from(els,{opacity:0,x:-20,duration:.5,stagger:.07,ease:'power2.out'})});
ScrollTrigger.batch('.section-title',{start:'top 88%',once:true,onEnter:els=>gsap.from(els,{opacity:0,y:36,duration:.6,ease:'power2.out'})});
